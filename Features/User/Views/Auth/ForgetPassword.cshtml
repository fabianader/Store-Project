@using StoreProject.Features.User.DTOs
@model StoreProject.Features.User.Model.ForgetPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forget Password";
}
<section class="login_part padding_top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <form class="row contact_form" method="post" asp-controller="Auth" asp-action="ForgetPassword">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" asp-for="UserName" placeholder="Username">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">
                                    Send password reset code
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>