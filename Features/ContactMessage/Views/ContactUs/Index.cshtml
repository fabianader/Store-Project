@using StoreProject.Common
@using StoreProject.Features.ContactMessage.Models
@model ContactUsModel
@{
	ViewData["Title"] = "Contact Us";
}

<section class="padding_top">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h2>Get in Touch</h2>
        </div>
        <div class="col-lg-8">
          
          <form method="post" asp-antiforgery="true" asp-controller="ContactUs" asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

              <div class="col-12">
                <div class="form-group">
                  <textarea class="form-control" asp-for="Message" cols="30" rows="9" placeholder="Enter Message"></textarea>
                  <span asp-validation-for="Message" class="text-danger"></span>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="form-group">
                  <input class="form-control" type="text" asp-for="Name" placeholder="Enter your name">
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="form-group">
                  <input class="form-control" asp-for="Email" placeholder="Enter email address">
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>

              <div class="col-12">
                <div class="form-group">
                  <input class="form-control" type="text" asp-for="Subject" placeholder="Enter Subject">
                  <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
              </div>

            </div>

            <div class="form-group">
              <button type="submit" class="btn_3">Send Message</button>
            </div>
          </form>
        </div>

        <div class="col-lg-4">
          <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-home"></i></span>
            <div class="media-body">
              <h3>@SiteInfo.Address</h3>
            </div>
          </div>
          <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
            <div class="media-body">
              <h3>@SiteInfo.PhoneNumber</h3>
              <p>@SiteInfo.WorkingHours</p>
            </div>
          </div>
          <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-email"></i></span>
            <div class="media-body">
              <h3>@SiteInfo.SupportEmail</h3>
              <p>Send us your query anytime!</p>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
