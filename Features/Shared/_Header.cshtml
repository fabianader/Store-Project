@using StoreProject.Common

<header class="main_menu home_menu">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <partial name="_MessageAlert" />
                <nav class="navbar navbar-expand-lg navbar-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="menu_icon"><i class="fas fa-bars"></i></span>
                    </button>

                    <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ContactUs" asp-action="Index">Contact</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Administration</a>
                            </li>

                            <li class="nav-item dropdown">
                                <p class="nav-link dropdown-toggle" id="navbarDropdown_2"
                                    role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Authentication
                                </p>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="Register" asp-route-code="404">Register</a>
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="Login" asp-route-code="500">Login</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <p class="nav-link dropdown-toggle" id="navbarDropdown_2"
                                    role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Error Pages
                                </p>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown_2">
                                    <a class="dropdown-item" asp-controller="ErrorHandler" asp-action="Index" asp-route-code="404">Not found 404</a>
                                    <a class="dropdown-item" asp-controller="ErrorHandler" asp-action="Index" asp-route-code="500">Server Error 500</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="hearer_icon d-flex">
                        <a asp-controller="UserPanel" asp-action="Index">
                            <img alt="Profile" src="@Directories.GetIconImage("user.png")" width="25" />
                        </a>
                        <a id="search_1" href="javascript:void(0)"><i class="ti-search"></i></a>
                        <a asp-controller="Favorites" asp-action="Index"><i class="ti ti-heart"></i></a>
                        <vc:cart-summary></vc:cart-summary>
                    </div>
                </nav>
                <hr />

                <nav class="navbar navbar-expand-lg" style="float: left;">
                    <vc:tree></vc:tree>
                </nav>
            </div>
        </div>
    </div>
    <partial name="_Search" />
