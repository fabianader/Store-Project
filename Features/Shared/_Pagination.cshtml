@model StoreProject.Common.BasePagination

@if (Model.PageCount > 1)
{
	<div class="col-lg-12">
		<div class="pageination">
			<nav aria-label="Page navigation example">
				<ul class="pagination justify-content-center">
					@if (Model.CurrentPage > 1)
					{
						<li class="page-item">
							<a onclick="changePage(@(Model.CurrentPage - 1))" href="#" class="page-link" aria-label="Previous">
								<i class="ti-angle-double-left"></i>
							</a>
						</li>
					}
					else
					{
						<li class="page-item previous disabled">
							<a href="#" class="page-link" aria-label="Previous"></a>
						</li>
					}


					@for (int i = Model.StartPage; i <= Model.EndPage; i++)
					{
						<li class="page-item">
							<a href="#" onclick="changePage(@(i))" class="page-link">@(i)</a>
						</li>
					}


					@if (Model.CurrentPage < Model.PageCount)
					{
						<li class="page-item">
							<a href="#" onclick="changePage(@(Model.CurrentPage + 1))" class="page-link" aria-label="Next">
								<i class="ti-angle-double-right"></i>
							</a>
						</li>
					}
					else
					{
						<li class="page-item next disabled">
							<a href="#" class="page-link" aria-label="Next"></a>
						</li>
					}
				</ul>
			</nav>
		</div>
	</div>
}

