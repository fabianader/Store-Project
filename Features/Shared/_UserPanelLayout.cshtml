<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Panel</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
            border-radius: 4px;
        }
        .sidebar a:hover, .sidebar a.active {
            background-color: #495057;
        }
        header {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
        }
    </style>

</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar p-3">
                <h4 class="text-white text-center mb-4">User Panel</h4>
                <a asp-controller="UserPanel" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">Dashboard</a>
                <a asp-controller="UserPanelOrders" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Orders" ? "active" : "")">My Orders</a>
                <a asp-controller="UserPanelProfile" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Profile" ? "active" : "")">Profile</a>
                <a asp-controller="Favorites" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Favorites" ? "active" : "")">My Favorites <i class="bi bi-heart-fill text-danger"></i></a>
                <a asp-controller="UserPanelContactMessages" asp-action="Index" class="@(ViewData["ActivePage"] as string == "ContactMessages" ? "active" : "")">My Messages</a>
                <a asp-controller="UserPanelProfile" asp-action="ChangePassword" class="@(ViewData["ActivePage"] as string == "ChangePassword" ? "active" : "")">Change Password</a>
                <form method="post" asp-antiforgery="true" asp-controller="Auth" asp-action="Logout">
                    <button class="btn btn-dark">Logout</button>
                </form>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <header class="d-flex align-items-center">
                    <h2 class="h4 mb-0 me-5">@ViewData["Title"]</h2>
                    <ul class="navbar-nav flex-row">
                        <style>
                            li {
                                padding-left: 40px;
                            }
                        </style>
                        
                        <li class="nav-item me-3">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="ContactUs" asp-action="Index" class="nav-link">Contact</a>
                        </li>
                    </ul>
                    <span class="text-muted ml-auto">Welcome, @User.Identity?.Name</span>
                </header>

                <partial name="_MessageAlert" />

                <div class="modal" id="default_Modal" tabindex="-1" role="dialog">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">

                      </div>
                    </div>
                  </div>
                </div>
                
                <section class="mt-4">
                    @RenderBody()
                </section>
            </main>
        </div>
    </div>

    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="../../dist/js/global.js"></script>
    <script src="/js/store.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
