<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer Panel</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
            border-radius: 4px;
        }
        .sidebar a:hover, .sidebar a.active {
            background-color: #495057;
        }
        header {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar p-3">
                <h4 class="text-white text-center mb-4">Customer Panel</h4>
                <a asp-controller="UserPanel" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">Dashboard</a>
                <a asp-controller="UserPanelOrders" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Orders" ? "active" : "")">My Orders</a>
                <a asp-controller="UserPanelProfile" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Profile" ? "active" : "")">Profile</a>
                <a asp-controller="Favorites" asp-action="Index" class="@(ViewData["ActivePage"] as string == "Favorites" ? "active" : "")">Favorites</a>
                <a asp-controller="UserPanelProfile" asp-action="ChangePassword" class="@(ViewData["ActivePage"] as string == "ChangePassword" ? "active" : "")">Change Password</a>
                <form method="post" asp-antiforgery="true" asp-controller="Auth" asp-action="Logout">
                    <button class="btn btn-dark">Logout</button>
                </form>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <header class="d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">@ViewData["Title"]</h2>
                    <span class="text-muted">Welcome, @User.Identity?.Name</span>
                </header>

                <section class="mt-4">
                    @RenderBody()
                </section>
            </main>
        </div>
    </div>


    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="../../dist/js/global.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
