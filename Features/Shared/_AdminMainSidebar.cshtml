@using StoreProject.Common
@using StoreProject.Features.User.Services
@using System.Security.Claims
@inject IUserSharedService _userSharedService;
@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var user = await _userSharedService.GetUserByIdAsync(userId);
    var selected = ViewData["selected"]?.ToString()?.ToLower();
}

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a class="brand-link">
      <img src="../../dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>

    <div class="sidebar">
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img src="@Directories.GetUserProfilePicture(user.ProfilePicture)" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a class="d-block">@user.UserName</a>
        </div>
      </div>

      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <li class="nav-item">
            <a asp-controller="UsersManagement" asp-action="Index" class="nav-link @(selected == "users" ? "active" : null)">
              <i class="nav-icon fas fa-th"></i>
              <p>
                Users Management
              </p>
            </a>
          </li>

          <li class="nav-item">
            <a asp-controller="CategoriesManagement" asp-action="Index" class="nav-link @(selected == "categories" ? "active" : null)">
              <i class="nav-icon fas fa-th"></i>
              <p>
                Categories Management
              </p>
            </a>
          </li>

          <li class="nav-item">
            <a asp-controller="ProductsManagement" asp-action="Index" class="nav-link @(selected == "products" ? "active" : null)">
              <i class="nav-icon fas fa-th"></i>
              <p>
                Products Management
              </p>
            </a>
          </li>

          <li class="nav-item">
            <a asp-controller="OrdersManagement" asp-action="Index" class="nav-link @(selected == "orders" ? "active" : null)">
              <i class="nav-icon fas fa-th"></i>
              <p>
                Orders Management
              </p>
            </a>
          </li>

          <li class="nav-item">
            <a asp-controller="ContactMessagesManagement" asp-action="Index" class="nav-link @(selected == "messages" ? "active" : null)">
              <i class="nav-icon fas fa-th"></i>
              <p>
                Messages Management
              </p>
            </a>
          </li>
        </ul>
      </nav>
    </div>
</aside>
