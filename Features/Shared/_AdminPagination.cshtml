@model StoreProject.Common.BasePagination

@if (Model.PageCount > 1)
{
	<div class="col-lg-12">
        <nav aria-label="Page navigation example">
			<ul class="pagination justify-content-center">
				@if(Model.CurrentPage > 1)
				{
					<li class="paginate_button page-item previous">
						<a onclick="changePage(@(Model.CurrentPage - 1))" href="#" class="page-link">Previous</a>
					</li>
				}
				else
				{
					<li class="paginate_button page-item previous disabled">
						<a href="#" class="page-link">Previous</a>
					</li>
				}


				@for (int i = Model.StartPage; i <= Model.EndPage; i++)
				{
					<li class="paginate_button page-item @(Model.CurrentPage == i ? "active" : null)">
						<a href="#" onclick="changePage(@(i))" class="page-link">@(i)</a>
					</li>
				}


				@if(Model.CurrentPage < Model.PageCount)
				{
					<li class="paginate_button page-item">
						<a href="#" onclick="changePage(@(Model.CurrentPage + 1))" class="page-link">Next</a>
					</li>
				}
				else
				{
					<li class="paginate_button page-item next disabled">
						<a href="#" class="page-link">Next</a>
					</li>
				}
			</ul>
		</nav>
	</div>
}
